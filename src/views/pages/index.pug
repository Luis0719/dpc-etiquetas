extends ../layout/header

block content
  div.inline
    h2="Perfumes disponibles:"
    i="Max 45 etiquetas por página (se pueden crear varias páginas)"
    div.mb-1
      i="5 por fila"
    div
      i="Se han seleccionado "
      i#count=0
      i=" etiquetas"
    form(
      method="POST",
      action="/preview"
    )
      button(
        type="submit"
      )="Aceptar"
      each x in etiquetas
        div
          input.tag-amount(
            id=x.path,
            name=x.path
            type='number',
            min=0,
            max=100,
            value=0,
            data-label=`${x.path}-label`
          )
          label.tag-amount(
            for=x.path,
            id=`${x.path}-label`
          )=x.name

block scripts
  script(
    type="text/javascript",
    src="js/index.js"
  )